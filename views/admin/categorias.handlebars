<h2>Lista de  categorias </h2>
<hr/>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4> 
        <small>Slug:{{slug}}</small>
        <small>Data: {{#formatDate data}}{{/formatDate}}</small>
        <div class="">
         <a href="/admin/categorias/edit/{{_id}}" ><button class="btn btn-success mt-3 ">Editar</button></a>
         </div>
        <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
               <button class="btn btn-danger mt-2">Deletar</button> 
        </form>
    </div>
        

</div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria cadastrada</h4>
{{/each}}

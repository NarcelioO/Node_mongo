<h2>Lista de  Postagens </h2>
<hr/>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>


{{#each posts}}
    
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4> 
        <p>{{descricao}}</p>
        <small><strong>Slug:</strong> {{slug}}</small>
        <small><strong>Data:</strong> {{#formatDate date}}{{/formatDate}}</small>
        <small><strong>Categoria:</strong> {{categoria.nome}}</small>
        <div class="">
         <a href="/admin/postagens/edit/{{_id}}" ><button class="btn btn-success mt-3 ">Editar</button></a>
         </div>
        <form action="/admin/postagens/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
               <button class="btn btn-danger mt-2">Deletar</button> 
        </form>
    </div>
        

</div>
{{else}}
    <h4 class="mt-4">Nenhum post cadastrado</h4>


{{/each}}